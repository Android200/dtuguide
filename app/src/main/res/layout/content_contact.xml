<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.dtuapp.ContactActivity"
    tools:showIn="@layout/activity_contact">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="3dp"
            card_view:contentPaddingLeft="-6dp"
            card_view:contentPaddingRight="-6dp"
            card_view:contentPaddingTop="-6dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/title11"
        android:text="Title"
        android:textColor="#FFFFFF"
        android:paddingLeft="70dp"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:background="#8D6E63"
        android:textAllCaps="true"
        android:textSize="20sp" />
        </android.support.v7.widget.CardView>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:id="@+id/title_image"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:background="#CFD8DC"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="Description"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact"
        android:text="Contact -"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/contact_name"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:text="Contact Name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:id="@+id/contact_number"
        android:text=""/>

        <ImageButton
            android:layout_width="35dp"
            android:id="@+id/call"
            android:scaleType="centerCrop"
            android:layout_height="35dp"
            android:src="@mipmap/browser_button"
            android:background="@drawable/tab_color_selector"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>