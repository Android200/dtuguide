<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/grey2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_margin="15dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardBackgroundColor="#D7CCC8"
        card_view:contentPadding="10dp"
        card_view:cardElevation="3dp">
    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter (Eg. 4th Sem COE Sec-A)"
        android:id="@+id/actv"
        android:background="@drawable/autocomplete_view"
        android:padding="5dp"
        android:dropDownVerticalOffset="-80dp"
        android:inputType="textAutoComplete|textAutoCorrect"
        android:dropDownHeight="200dp"
        />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_margin="15dp"
        android:layout_marginTop="5dp"
        android:id="@+id/timetable"
        android:visibility="gone"
        card_view:cardCornerRadius="3dp"
        card_view:cardBackgroundColor="#D7CCC8"
        card_view:cardElevation="3dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/iv"
        android:background="@drawable/autocomplete_view"
        android:layout_margin="2dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:background="@drawable/download_timetable"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:id="@+id/download_timetable"
            android:src="@mipmap/download_timetable"/>

    </RelativeLayout>
</LinearLayout>